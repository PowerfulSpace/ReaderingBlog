@model LoginViewModel

<div>
    <h1>Вход в личный кабинет</h1>
    <div>

        <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
            @foreach (var provider in Model.ExternalProviders)
            {
                <button type="submit" name="provider" value="@provider.Name">@provider.DisplayName</button>
            }
        </form>

        @*<form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">*@
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All"></div>
            <input hidden asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="UserName"></label>
                <div class="col-md-5">
                    <input asp-for="UserName" class="form_control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="col-md-5">
                    <input asp-for="Password" class="form_control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>
